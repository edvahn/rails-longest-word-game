<div class="container">
  <h1>New game</h1>
  <ul class="list-inline">
    <% @letters.each do |letter|%>
    <li class="list-inline-item mini-card"><%= letter %></li>
    <% end %>
  </ul>
  <p>What is the longest word you can find ?</p>
  <div class="form-group">
    <form action="/score" method="post">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= hidden_field_tag 'letters', @letters %>
      <%= hidden_field_tag 'grid', @grid %>
      <div class="input-group">
        <input type="text" class="form-control" name="word" placeholder="Type your word">
        <input type="submit" value="Submit" class="input-group-addon">
      </div>
    </form>
  </div>
</div>
